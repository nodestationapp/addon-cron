{
  "/admin-api/crons": {
    "get": {
      "tags": ["Crons"],
      "summary": "Get all cron jobs",
      "description": "Retrieve all cron jobs with pagination and sorting",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "parameters": [
        {
          "name": "sort",
          "in": "query",
          "required": false,
          "description": "Sort by field in format field:order (e.g., created_at:asc)",
          "schema": {
            "type": "string",
            "pattern": "^[a-zA-Z_]+:(asc|desc)$",
            "example": "created_at:asc"
          }
        },
        {
          "name": "page",
          "in": "query",
          "required": false,
          "description": "Page number (starting from 0)",
          "schema": {
            "type": "integer",
            "minimum": 0,
            "example": 0
          }
        },
        {
          "name": "pageSize",
          "in": "query",
          "required": false,
          "description": "Number of items per page",
          "schema": {
            "type": "integer",
            "minimum": 1,
            "maximum": 1000,
            "example": 20
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Cron jobs retrieved successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "343182"
                        },
                        "name": {
                          "type": "string",
                          "example": "Daily Database Backup"
                        },
                        "expression": {
                          "type": "string",
                          "example": "0 2 * * *"
                        },
                        "content": {
                          "type": "string",
                          "example": "console.log('Starting backup...'); // Backup database logic here"
                        }
                      }
                    }
                  },
                  "meta": {
                    "type": "object",
                    "properties": {
                      "page": {
                        "type": "integer",
                        "example": 0
                      },
                      "pageSize": {
                        "type": "integer",
                        "example": 20
                      },
                      "count": {
                        "type": "integer",
                        "example": 5
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "500": {
          "description": "Something went wrong"
        }
      }
    },
    "post": {
      "tags": ["Crons"],
      "summary": "Create cron job",
      "description": "Create a new cron job",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Weekly Report Generator"
                },
                "expression": {
                  "type": "string",
                  "description": "Cron expression (e.g., * * * * * for every minute)",
                  "example": "0 9 * * 1"
                },
                "content": {
                  "type": "string",
                  "description": "JavaScript code to execute",
                  "example": "console.log('Generating weekly report...'); // Generate report logic here"
                }
              },
              "required": ["name", "expression", "content"]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Cron job created successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "example": "ok"
                  }
                }
              }
            }
          }
        },
        "500": {
          "description": "Something went wrong",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string",
                    "example": "Something went wrong"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "/admin-api/crons/{id}": {
    "put": {
      "tags": ["Crons"],
      "summary": "Update cron job",
      "description": "Update an existing cron job",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "Cron job ID",
          "schema": {
            "type": "string",
            "example": "343182"
          }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "active": {
                  "type": "boolean",
                  "example": true
                },
                "name": {
                  "type": "string",
                  "example": "Daily Database Backup - Updated"
                },
                "expression": {
                  "type": "string",
                  "description": "Cron expression (e.g., * * * * * for every minute)",
                  "example": "0 3 * * *"
                },
                "content": {
                  "type": "string",
                  "description": "JavaScript code to execute",
                  "example": "console.log('Running updated backup...'); // Updated backup logic here"
                }
              },
              "required": ["active", "name", "expression", "content"]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Cron job updated successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "example": "ok"
                  }
                }
              }
            }
          }
        },
        "500": {
          "description": "Something went wrong",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string",
                    "example": "Something went wrong"
                  }
                }
              }
            }
          }
        }
      }
    },
    "delete": {
      "tags": ["Crons"],
      "summary": "Delete cron job",
      "description": "Delete an existing cron job",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "Cron job ID",
          "schema": {
            "type": "string",
            "example": "343182"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Cron job deleted successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "example": "ok"
                  }
                }
              }
            }
          }
        },
        "500": {
          "description": "Something went wrong",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string",
                    "example": "Something went wrong"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
